---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

// Fetch booking statistics - using Promise.all for parallel fetching
let pendingCount = 0;
let acceptedCount = 0;
let deniedCount = 0;
let totalBookings = 0;
let recentBookings: any[] = [];

try {
    // Parallel fetch all data for better performance
    const [pendingResult, acceptedResult, deniedResult, recentResult] =
        await Promise.all([
            // Get counts by status (only counting, no data needed)
            supabase
                .from("bookings")
                .select("id", { count: "exact", head: true })
                .eq("status", "pending"),
            supabase
                .from("bookings")
                .select("id", { count: "exact", head: true })
                .eq("status", "accepted"),
            supabase
                .from("bookings")
                .select("id", { count: "exact", head: true })
                .eq("status", "denied"),
            // Get recent bookings - select only needed fields
            supabase
                .from("bookings")
                .select(
                    "id, first_name, last_name, tattoo_idea, status, created_at",
                )
                .order("created_at", { ascending: false })
                .limit(5),
        ]);

    pendingCount = pendingResult.count || 0;
    acceptedCount = acceptedResult.count || 0;
    deniedCount = deniedResult.count || 0;
    totalBookings = pendingCount + acceptedCount + deniedCount;
    recentBookings = recentResult.data || [];
} catch (error) {
    console.error("Error fetching dashboard data:", error);
}

// Format date helper
function formatDate(dateString: string) {
    return new Date(dateString).toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
}

function getStatusColor(status: string) {
    switch (status) {
        case "pending":
            return "bg-yellow-100 text-yellow-800";
        case "accepted":
            return "bg-green-100 text-green-800";
        case "denied":
            return "bg-red-100 text-red-800";
        default:
            return "bg-gray-100 text-gray-800";
    }
}
