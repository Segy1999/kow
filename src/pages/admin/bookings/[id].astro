                                    <dd class="mt-1 text-gray-900 dark:text-white">
                                        {formatDate(booking.created_at)}
                                    </dd>
                                </div>
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                                        Booking Type
                                    </dt>
                                    <dd class="mt-1 text-gray-900 dark:text-white">
                                        {booking.is_custom
                                            ? "Custom Design"
